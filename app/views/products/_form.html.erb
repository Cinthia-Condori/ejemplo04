<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, id: "product_name", oninput: "validateForm()" %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price, id: "product_price", oninput: "validateForm()" %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, id: "product_description", oninput: "validateForm()" %>
  </div>

  <div>
    <%= form.submit "Save Changes", id: "submit_button", disabled: true %>
  </div>
<% end %>

<script>
  function validateForm() {
    let name = document.getElementById("product_name").value.trim();
    let price = document.getElementById("product_price").value.trim();
    let description = document.getElementById("product_description").value.trim();
    let button = document.getElementById("submit_button");

    if (name === "" || price === "" || description === "") {
      button.disabled = true;
    } else {
      button.disabled = false;
    }
  }
</script>
